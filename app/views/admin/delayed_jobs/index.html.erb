<div class="content">
  <div class="page-header">
    <h1>Jobs</h1>
  </div>
  
  <% unless @jobs.empty? %>
    <table class="table">
      <thead>
        <tr>
          <th>Queue</th>
          <th>Waiting</th>
          <th class="hidden-phone">Active</th>
          <th class="hidden-phone">Failed</th>
        </tr>
      </thead>
      <tbody>
        <% @jobs.each do|job| %>
          <tr>
            <td><%= h(job.queue) %></td>
            <td><%= job.total - (job.active + job.failed) %></td>
            <td><%= job.active %></td>
            <td><%= job.failed %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info">There are currently no jobs.</div>
  <% end %>
</div>