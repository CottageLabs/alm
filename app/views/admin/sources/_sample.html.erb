<% unless sample.empty? %>
  <div class="row">
  <% sample.each do |retrieval_status| %>
    <div class="span12">
      <h4><%= link_to retrieval_status.article.title, retrieval_status.article %></h4>
      <%= retrieval_status.article.published_on.to_s(:long) %> - <%= pluralize retrieval_status.event_count, "event" %>
    </div>
  <% end %>
  </div>   
<% else %>
  <div class="alert alert-info">No articles have been cited by this source</div>
<% end %>