<div class="border">
  <div class="page">

    <h1>Article Summaries</h1>

    <% @summaries.each do |summary| %>
        <div class="article">
          <span class="doi">
            <%=link_to h(summary[:article].doi), article_path(summary[:article]) %>
            <span class="details">
              <ul>
                <% summary[:groupcounts].each do |gc| %>
                    <li>
                      <%= gc[:name] %>: <%= gc[:count] %>
                      <ul>
                      <% gc[:sources].each do |source| %>
                        <li>
                          <% if source[:public_url].nil? %>
                              <%= "#{source[:source]} (#{source[:count]})" %>
                          <% else %>
                              <%= link_to "#{source[:source]} (#{source[:count]})", source[:public_url] %>
                          <% end %>
                        </li>
                      <% end %>
                      </ul>
                    </li>
                <% end %>
              </ul>
            </span>
          </span>
        </div>
    <% end %>

  </div>
</div>