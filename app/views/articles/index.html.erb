<div class="content">
  <div id="index">
    <%= render :partial => 'admin/articles/index' %> 
  </div>
  
  <% unless @articles.empty? %>
    <ul class="unstyled">
      <% @articles.each do |article| %>
          <li>
            <h4><%= link_to article.title, article %> <small><%= pluralize article.cited_retrievals_count, "source" %></small></h4>
          </li>
      <% end %>
    </ul>
  <% else %>
    <div class="alert alert-info">No articles found</div>
  <% end %>

  <%= will_paginate @articles, :renderer => BootstrapPagination::Rails %>

</div>
