<div class="content">
  <div class="page-header">
    <h1>
      <%= pluralize(@articles.total_entries, 'Article') %>
      <% unless params[:query].blank? %>
          with <em><%= params[:query] %></em> in the title or DOI
      <% end %>
    </h1>
  </div>

    <% unless @articles.empty? %>
      <ul class="unstyled">
        <% @articles.each do |article| %>
            <li>
              <h3><%= link_to article.title, article %> <small><%= pluralize article.cited_retrievals_count, "source" %></small></h3>
            </li>
        <% end %>
    <% else %>
        <div>No <%= "cited" if params[:cited] %> articles found</div>
    <% end %>

    <%= will_paginate @articles %>
    
</div>
