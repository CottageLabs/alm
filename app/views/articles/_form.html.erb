<% article ||= form %>
<% form_for(article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :doi, "DOI" %><br />
    <%= f.text_field :doi %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :volume %><br />
    <%= f.text_field :volume, :size => 8  %>
  </p>
  <p>
    <%= f.label :issue %><br />
    <%= f.text_field :issue, :size => 8  %>
  </p>
  <p>
    <%= f.label :published_on %><br />
    <%= date_select 'article', 'published_on', :order => [:month, :day, :year] %>
  </p>
  <p>
    <%= f.submit(article.new_record? ? "Create" : "Update") %>
  </p>
<% end %>
