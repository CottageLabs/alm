<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>
    <% unless Rails.env.production? %>
        <%= "(#{Rails.env})"  %>
    <% end %>
    Article Level Metrics
  </title>

  <%= favicon_link_tag %>
  <%= stylesheet_link_tag "greenrobo" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
			<div class="container">
			  <a class="brand" href="<%= root_path %>">Article Level Metrics</a>
			  <% if ["articles"].include?(controller.controller_name) and ["index"].include?(controller.action_name) %>
		      <%= form_tag({:controller => controller.controller_name, :action => "index"}, :method => "get", :class => "navbar-search pull-left") do %>
          <%= search_field_tag :query, params[:query], :placeholder => "Search", :class => "search-query" %>
		      <% end %>
        <% end %>
				<ul class="nav">
					<li><%= link_to("Articles", articles_path, :class => current_page?(articles_path) ? 'current' : '') %></li>
          <li><%= link_to("Sources", sources_path, :class => current_page?(sources_path) ? 'current' : '') %></li>
					<% if user_signed_in? %>
            <%= render :partial => 'layouts/administration' %> 
            <li class="nav pull-right"><%= link_to("Logout", destroy_user_session_path, :method => 'delete') %></li>
          <% else %>
            <li><%= link_to_setup_or_login %></li>
          <% end %>
	      </ul>
			</div>
		</div>
	</div>

  <div class="container">
    <% [ :error, :notice, :warning, :message, :alert ].each do |name| %>
      <% if flash[name] %>
        <div class="<%= name %> flash" id="<%= name %>">
          <span><%= flash[name] %></span>
        </div>
      <% end %>
    <% end %>

    <%= yield %>
  </div>

</body>
</html>