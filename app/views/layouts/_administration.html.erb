<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administration</a>
  <ul class="dropdown-menu">
    <li><%= link_to '<i class="icon-plus"></i> Add Article'.html_safe, new_admin_article_path, { :remote => true, 'data-toggle' => 'modal', 'data-target' => "#modal-article" } %></li>
    <% if controller.controller_name == "articles" and controller.action_name == "show" %>
    <li><%= link_to '<i class="icon-pencil"></i> Edit Article'.html_safe, edit_admin_article_path(@article), { :remote => true, 'data-toggle' => 'modal', 'data-target' => "#modal-article" } %></li>
      <li><%= link_to '<i class="icon-remove"></i> Delete Article'.html_safe, admin_article_path(@article), :confirm => 'Are you sure?', :method => :delete %></li>
    <% elsif controller.controller_name == "sources" and controller.action_name == "show" %>
      <li class="divider"></li>
      <li><%= link_to '<i class="icon-pencil"></i> Edit Source'.html_safe, edit_admin_source_path(@source), { :remote => true, 'data-toggle' => 'modal', 'data-target' => "#modal-source" }  %></li>
    <% end %>
    <li class="divider"></li>
    <li><%= link_to '<i class="icon-plus"></i> Add Group'.html_safe, new_admin_group_path %></li>
    <% if controller.controller_name == "groups" and controller.action_name == "show" %>
    <li><%= link_to '<i class="icon-pencil"></i> Edit Group'.html_safe, edit_admin_group_path(@group) %></li>
    <% end %>
  </ul>
</li>