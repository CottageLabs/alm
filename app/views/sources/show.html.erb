<div class="content">
  <div class="page-header">
    <h1><%= h(@source.display_name) %></h1>
  </div>
  
  <dl class="dl-horizontal">
    <dt>Status</dt>
    <dd><%= @source.status %></dd>
    <% if @source.group %>
      <dt>Group</dt>
      <dd><%= h(@source.group.name) %></dd>
    <% end %>
    <% unless @source.private %>
      <dt>Documentation</dt>
      <dd><%= link_to "Information at ALM Wiki", "http://github.com/articlemetrics/alm/wiki/" + @source.name %></dd>
    <% end %>
  </dl>
  
  <% unless @samples.empty? %>
    <h3 class="section">Most-Cited Articles</h3>
    <ul class="unstyled">
      <% @samples.each do |retrieval_status| %>
        <li>
          <h4><%= link_to retrieval_status.article.title, retrieval_status.article %> <small><%= pluralize retrieval_status.event_count, "event" %></small></h4>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="alert alert-info">No articles have been cited by this source</div>
  <% end %>
</div>